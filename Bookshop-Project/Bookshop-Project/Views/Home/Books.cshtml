@model BookSearchViewModel

@{
    ViewData["Title"] = "Books";
}

<ul>
    @foreach (var result in Model.Results)
    {
        <li>@result.Title</li>
    }
</ul>

<div class="d-flex justify-content-center gap-3">
    <a asp-controller="Home" asp-action="Books" asp-route-q="@Model.Search" asp-route-page="@(Model.Page - 1)" class="btn btn-primary @(Model.Start == 0 ? "disabled" : "")">
        Previous Page
    </a>

    <a asp-controller="Home" asp-action="Books" asp-route-q="@Model.Search" asp-route-page="@(Model.Page + 1)" class="btn btn-primary @(Model.Found < Model.Start + 100 ? "disabled": "")">
        Next Page
    </a>
</div>
