
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="font-weight:bold;">Helikon</h1>
    <p style="font-size:18px;">Books at an affordable price!</p>

    <form class="d-flex" asp-controller="Home" asp-action="Books" method="post">
        <input class="form-control me-2" name="q" type="search" placeholder="Search books" aria-label="Search books">
        <button class="btn btn-primary" type="submit">Search</button>
    </form>
</div>

<div style="margin-top:30px" class="row row-cols-3 g-3">
    @foreach (var result in Model)
    {
        <div class="col">
            <div class="card">
                @if (result.CoverUrl == "")
                {
                    <img src="https://upload.wikimedia.org/wikipedia/commons/b/b9/No_Cover.jpg" class="card-img-top" alt="" style="height: 400px" />
                }
                else
                {
                    <img src="@result.CoverUrl" class="card-img-top" alt="" style="height: 400px" />
                }
                <div class="card-body">
                    <h5 class="card-title">@result.Title</h5>
                    <p class="card-text">@result.Author</p>
                    @if (result.Price == 0)
                    {
                        <h5>No Price availabe</h5>
                    }
                    else
                    {
                        <h5>@result.Price$</h5>
                    }

                </div>
            </div>
        </div>
    }
</div>